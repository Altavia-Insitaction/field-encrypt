{
    "version": "2.0.0",
    "name": "insitaction/field-encrypt-bundle",
    "description": "Allows automatic encryption of fields, as required by GDPR.",
    "type": "symfony-bundle",
    "require": {
        "php": ">=7.4",
        "symfony/framework-bundle": "^4|^5|^6",
        "doctrine/orm": "^2",
        "ext-sodium": "*",
        "ext-openssl": "*",
        "symfony/property-access": "^4|^5|^6",
        "tgalopin/html-sanitizer": "^1.5",
        "symfony/polyfill-php80": "^1.27"
    },
    "autoload": {
        "psr-4": {
            "Insitaction\\FieldEncryptBundle\\": "src/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Blairy",
            "email": "jblairy@insitaction.com"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.3",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-symfony": "^1.0"
    },
    "scripts": {
        "phpcsfixer": "./vendor/bin/php-cs-fixer fix",
        "phpcsfixer-lint": "./vendor/bin/php-cs-fixer fix --dry-run --diff",
        "phpstan": "./vendor/bin/phpstan analyse --no-progress",
        "ci": [
            "@phpcsfixer-lint",
            "@phpstan"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true
        }
    }
}
